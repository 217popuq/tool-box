{
  "name": "dev-on-wsl",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "mounts": [
    "source=/home/taichi/.kube,target=/home/vscode/.kube,type=bind",
    "source=/home/taichi/.config/helm,target=/home/vscode/.config/helm,type=bind",
    "source=/home/taichi/.terraform.d,target=/home/vscode/.terraform.d,type=bind",
    "source=/home/taichi/.azure,target=/home/vscode/.azure,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/scripts/install-tools.sh",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
